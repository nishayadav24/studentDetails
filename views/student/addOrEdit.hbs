        <label>DOB</label>
        <input type="text" class="form-control" name="DOB" placeholder="DOB" value="{{student.DOB}}">
        <div class="text-danger">
            {{student.DOBError}}</div>
    </div>
      <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="Address" placeholder="Address" value="{{student.Address}}">
        <div class="text-danger">
            {{student.AddressError}}</div>
    </div>
      <div class="form-group">
        <label>State</label>
        <input type="text" class="form-control" name="State" placeholder="State" value="{{student.State}}">
        <div class="text-danger">
            {{student.StateError}}</div>
    </div>
      <div class="form-group">
        <label>city</label>
        <input type="text" class="form-control" name="city" placeholder="city" value="{{student.city}}">
        <div class="text-danger">
            {{student.cityError}}</div>
    </div>
      <div class="form-group">
        <label>Pin</label>
        <input type="text" class="form-control" name="Pin" placeholder="Pin" value="{{student.Pin}}">
        <div class="text-danger">
            {{student.AddressError}}</div>
    </div>
      <div class="form-group">
        <label>PhoneNumber</label>
        <input type="text" class="form-control" name="PhoneNumber" placeholder="PhoneNumber" value="{{student.PhoneNumber}}">
        <div class="text-danger">
            {{student.PhoneNumberError}}</div>
    </div>
      <div class="form-group">
        <label>Email</label>
