        <input type="text" class="form-control" name="Marks" placeholder="Marks" value="{{student.Marks}}">
        <div class="text-danger">
            {{student.MarksError}}</div>
    </div>
    <div class="form-group">
        <label>Date</label>
        <input type="text" class="form-control" name="Date" placeholder="Date" value="{{student.Date}}">
        <div class="text-danger">
            {{student.DateError}}</div>
    </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/student/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>